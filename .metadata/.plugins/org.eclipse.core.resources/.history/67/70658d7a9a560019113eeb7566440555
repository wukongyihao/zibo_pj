package prac;

public class testctrl {

	public static void ctrl() {
		for(int i = 1;i<=9;i++) {
			for(int j = 1;j<=i;j++) {
				System.out.print(j +"*" +i +"="+ i*j + " ");
			}
			System.out.println();
		}
		
		
	}
	
	
	public static void sanjiao() {
		int max = 5;
		for(int i = 1;i<=5;i++) {
			for(int j = 1;j<=max-i;j++) {
				for(int k = 1;k<=i*2-1;k++) {
					System.out.print("*");
					}
				System.out.print(" ");
				}
			System.out.println();

			}
		
	}
	
	
	
	
	public static void main(String[] args) {
		 testctrl ctpr = new testctrl();
//		 ctpr.ctrl();
		 ctpr.sanjiao();
		 
	}
	
	
	
	
}
